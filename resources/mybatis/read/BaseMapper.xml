<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gov.gdupi.dao.read.BaseMapper">

    <select id="getBaselist" resultType="cn.gov.gdupi.model.Base">
        select id,name,create_time,remarks from base
        <where>
            del_flag='0'
            <if test="name!=null">
                name like '%${name}%'
            </if>
        </where>
        <if test="offset==0">
            LIMIT #{limit}
        </if>
        <if test="offset>0">
            LIMIT #{limit} OFFSET #{offset}
        </if>
    </select>

</mapper>